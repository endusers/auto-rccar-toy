<!-- rccar-robot-launch.xml -->

<launch>
  <arg name="use_sim_time" default="false"/>
  <arg name="rviz_config_file" default="$(find-pkg-share rccar_navigation2)/rviz/rccar.rviz"/>

  <node pkg="rviz2" exec="rviz2" name="rviz2_node" output="both" args="-d $(var rviz_config_file)">
    <param name="use_sim_time" value="$(var use_sim_time)"/>
  </node>
</launch>
